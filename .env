# ==============================================
# CONFIGURAÇÕES DO AMBIENTE DE DESENVOLVIMENTO
# ==============================================

# Ambiente da aplicação
APP_ENV=development
APP_NAME="Sistema de Cálculo de Frete"
APP_URL=http://localhost:8080
APP_DEBUG=true

# ==============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ==============================================

# Banco de dados MySQL
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=fretecalc_db
DB_USERNAME=root
DB_PASSWORD=senhateste

# ==============================================
# CONFIGURAÇÕES JWT
# ==============================================

# Chave secreta para assinar os tokens JWT (MUDE EM PRODUÇÃO!)
JWT_SECRET=joao-filho107
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400  # 24 horas em segundos (86400 = 24h)
JWT_ISSUER=fretecalc.com

# ==============================================
# CONFIGURAÇÕES DO DOCKER
# ==============================================

# Portas dos serviços
WEB_PORT=8080
DB_PORT=3306
PHPMYADMIN_PORT=8000

# ==============================================
# CONFIGURAÇÕES DE SEGURANÇA
# ==============================================

# Chave secreta da aplicação (gere uma nova para produção)
APP_SECRET=your-secret-key-here-change-in-production

# Salt para hashing de senhas
PASSWORD_SALT=your-password-salt-here

# ==============================================
# CONFIGURAÇÕES DE EMAIL (para futuras implementações)
# ==============================================

MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@fretecalc.com
MAIL_FROM_NAME="FreteCalc System"

# ==============================================
# CONFIGURAÇÕES DE CACHE (para futuras implementações)
# ==============================================

CACHE_DRIVER=file
CACHE_TTL=3600

# ==============================================
# CONFIGURAÇÕES DE LOG
# ==============================================

LOG_LEVEL=debug
LOG_FILE=storage/logs/app.log

# ==============================================
# CONFIGURAÇÕES DE API EXTERNA (para futuras implementações)
# ==============================================

# API dos Correios para consulta de CEP
CORREIOS_API_URL=https://viacep.com.br/ws/
CORREIOS_API_KEY=

# API do Google Maps para cálculo de distância
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# ==============================================
# CONFIGURAÇÕES DE BACKUP
# ==============================================

BACKUP_PATH=storage/backups
BACKUP_RETENTION_DAYS=30

